<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="GymExerciseMauiApp.TestPage"
             Title="TestPage"
             Shell.NavBarIsVisible="False">

    <AbsoluteLayout>

        <!-- Deine Hauptinhalte hier (z. B. Grid, StackLayout, etc.) -->
        <Label Text="Inhalt hier" HorizontalOptions="Center" VerticalOptions="Center" />

        <!-- Runder + Button -->
        <Button Text="＋"
            FontSize="24"
            BackgroundColor="#5F42FF"
            TextColor="White"
            WidthRequest="60"
            HeightRequest="60"
            CornerRadius="30"
            AbsoluteLayout.LayoutBounds="1,1,AutoSize,AutoSize"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            Shadow="5"
            Padding="0"
            Margin="0,0,20,20"
            HorizontalOptions="End"
            VerticalOptions="End" />
    </AbsoluteLayout>


</ContentPage>