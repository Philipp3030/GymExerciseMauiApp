<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="GymExerciseMauiApp.MainPage"
             xmlns:viewmodel="clr-namespace:GymExerciseClassLibrary.ViewModels;assembly=GymExerciseClassLibrary"
             x:DataType="viewmodel:MainViewModel"
             Title="Main">

    <!--StatusBarColor="Transparent" führt zu Problemen beim fokussen von Entrys-->
    <Page.Behaviors>
        <toolkit:StatusBarBehavior x:Name="statusBar" StatusBarColor="#262626" StatusBarStyle="LightContent"/>
    </Page.Behaviors>

    <Grid RowDefinitions="Auto, Auto, *, Auto" ColumnDefinitions="Auto, *, Auto" BackgroundColor="#262626">
        <Label  Text="Meine Trainings"
                TextColor="#cfdccf"
                FontSize="24"
                FontAttributes="None"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                Margin="0,20,0,20"
                Grid.Row="0"
                Grid.ColumnSpan="3">
        </Label>

        <Button Text="Exercises"
                Clicked="NavigateToSavedExercises"
                TextColor="Black"
                BorderColor="Black"
                BorderWidth="0.5"
                FontSize="16"
                BackgroundColor="Gray"
                WidthRequest="100"
                HeightRequest="50"
                CornerRadius="30"
                Margin="10,0,0,0"
                HorizontalOptions="End"
                Grid.Row="1"
                Grid.Column="0">
        </Button>

        <Button Text="Unused button"
                Padding="0"
                LineBreakMode="WordWrap"
                Clicked="NavigateToAddExercise"
                TextColor="Black"
                BorderColor="Black"
                BorderWidth="0.5"
                FontSize="16"
                BackgroundColor="Gray"
                WidthRequest="100"
                HeightRequest="50"
                CornerRadius="30"
                HorizontalOptions="Center"
                Grid.Row="1"
                Grid.Column="1">
        </Button>

        <Button Text="Add"
                Clicked="NavigateToAddTraining"
                TextColor="Black"
                BorderColor="Black"
                BorderWidth="0.5"                
                FontSize="16"
                BackgroundColor="Gray"
                WidthRequest="100"
                HeightRequest="50"
                CornerRadius="30"
                Margin="0,0,10,0"
                HorizontalOptions="End"
                Grid.Row="1"
                Grid.Column="2">
        </Button>

        <!-- Inner Grid in Row 2 -->
        <Grid Grid.Row="2" Grid.ColumnSpan="3" BackgroundColor="Transparent" Padding="20">
            <!-- You can define rows/columns inside this inner grid if needed -->
            <CollectionView ItemsSource="{Binding SavedTrainings}" x:Name="TrainingCollectionView" Margin="0, 10, 0, 10">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodel:TrainingViewModel">
                        <VerticalStackLayout Margin="0, 0, 0, 10" BackgroundColor="Transparent">
                            <Border Stroke="Black" StrokeThickness="0.5">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <Grid BackgroundColor="#808080">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Grid BackgroundColor="Transparent" Padding="15" Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="NavigateToOverviewExercisesOfTrainingPage"/>
                                        </Grid.GestureRecognizers>

                                        <Label Text="{Binding Name}" 
                                               x:Name="NameLabel"
                                               TextColor="Black"
                                               FontAttributes="Bold"
                                               FontSize="16" 
                                               VerticalOptions="Center"
                                               HorizontalOptions="Fill"
                                               Grid.Row="0"
                                               Grid.Column="0">
                                        </Label>
                                        <Label Text="{Binding Description}" 
                                               x:Name="DescriptionLabel"
                                               FontAttributes="None"
                                               FontSize="16" 
                                               VerticalOptions="Center"
                                               HorizontalOptions="Fill"
                                               Grid.Row="1"
                                               Grid.Column="0">
                                        </Label>

                                        <Grid Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="2" BackgroundColor="Transparent">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Image Grid.Row="0" Grid.Column="0" Source="icon_edit.png" WidthRequest="40" HeightRequest="30">
                                                <Image.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="NavigateToTrainingUpdatePage"/>
                                                </Image.GestureRecognizers>
                                            </Image>
                                            <Image Grid.Row="0" Grid.Column="1" Source="icon_delete.png" WidthRequest="40" HeightRequest="30">
                                                <Image.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=DeleteTrainingCommand}" 
                                                                          CommandParameter="{Binding .}"/>
                                                </Image.GestureRecognizers>
                                            </Image>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Border>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
        <Button Text="Test" Grid.Row="3" Clicked="NavigateToTestPage" IsVisible="False">

        </Button>
    </Grid>
</ContentPage>
