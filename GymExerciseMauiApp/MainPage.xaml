<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymExerciseMauiApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label
                Text="Test MAUI SQLite"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />
            <Button
                x:Name="ShowSavedTrainings"
                Text="Show Trainings"
                Clicked="NavigateToSavedTrainings"
                HorizontalOptions="Center" />
            <Button
                x:Name="NavigateBtn"
                Text="Add Exercise"
                Clicked="NavigateToAddExercise"
                HorizontalOptions="Center" />
            <Button
                x:Name="AddTrainingBtn"
                Text="Add Training"
                Clicked="NavigateToAddTraining"
                HorizontalOptions="Center" />
            <Button
                x:Name="ShowSavedExercises"
                Text="Show Exercises"
                Clicked="NavigateToSavedExercises"
                HorizontalOptions="Center" />
            <Editor
                x:Name="ResultEditor"
                WidthRequest="200"
                HeightRequest="300"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
