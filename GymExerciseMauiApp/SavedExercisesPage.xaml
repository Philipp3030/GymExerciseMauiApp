<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymExerciseMauiApp.SavedExercisesPage"
             xmlns:viewmodel="clr-namespace:GymExerciseClassLibrary.ViewModels;assembly=GymExerciseClassLibrary"
             x:DataType="viewmodel:SavedExercisesViewModel"
             Title="SavedExercises">
    <CollectionView ItemsSource="{Binding Exercises}" x:Name="ExerciseCollectionView">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="viewmodel:ExerciseViewModel">
                <Frame BorderColor="LightGray" Margin="5" Padding="10" BackgroundColor="White">
                    <Grid Padding="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Text="{Binding Name}" FontAttributes="Bold" FontSize="16" TextColor="Black"/>
                        <Label Grid.Row="2" Grid.Column="0" Text="{Binding Musclegroup.Name}" FontSize="14" TextColor="Gray"/>
                        <!--<Button Grid.Row="1" Grid.Column="1" Text="Update Exercise" Clicked="NavigateToUpdateExercise"/>-->
                        <Image Grid.Row="1" Grid.Column="3" Source="icon_edit.png" WidthRequest="40" HeightRequest="30">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="NavigateToUpdateExercise"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                    <!--<VerticalStackLayout x:DataType="viewmodel:ExerciseViewModel">
                        <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="16" TextColor="Black"/>
                        <Label Text="{Binding Musclegroup.Name}" FontSize="14" TextColor="Gray" />
                        <HorizontalStackLayout>
                            <Button Text="Update Exercise" Clicked="NavigateToUpdateExercise"/>
                            <Image Source="icon_edit.png" WidthRequest="40" HeightRequest="30"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>-->
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>