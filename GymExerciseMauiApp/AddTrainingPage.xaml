<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:GymExerciseClassLibrary.ViewModels;assembly=GymExerciseClassLibrary"
             x:Class="GymExerciseMauiApp.AddTrainingPage"
             Title="AddTrainingPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Name -->
            <Label Text="Name" />
            <Entry x:Name="NameEntry" Placeholder="Enter training name" Text="{Binding Name}" />

            <!-- Description -->
            <Label Text="Description" />
            <Editor x:Name="DescriptionEditor" Placeholder="Enter description (optional)" Text="{Binding Description}" />

            <!-- Exercises Header -->
            <Label Text="Exercises" FontAttributes="Bold" FontSize="16" />

            <!-- Exercises List -->
            <Frame BorderColor="LightGray" Margin="10" Padding="5" HeightRequest="300">
                <CollectionView ItemsSource="{Binding AllExercises}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="LightGray" Margin="5" Padding="10">
                                <HorizontalStackLayout Spacing="10">
                                    <CheckBox IsChecked="{Binding IsSelected}" CheckedChanged="OnExerciseCheckedChanged" />
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="16" />
                                        <Label Text="{Binding Musclegroup}" FontSize="14" TextColor="Gray" />
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>

            <!-- Save Button -->
            <Button Text="Submit" Command="{Binding SaveNewTrainingCommand}" />

            <!-- Selected Exercises Header -->
            <Label Text="Selected Exercises" FontAttributes="Bold" FontSize="16" />

            <!-- Selected Exercises List -->
            <Frame BorderColor="LightGray" Margin="10" Padding="5" HeightRequest="300">
                <CollectionView ItemsSource="{Binding SelectedExercises}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="LightGray" Margin="5" Padding="10">
                                <HorizontalStackLayout Spacing="10">
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="16" />
                                        <Label Text="{Binding Musclegroup}" FontSize="14" TextColor="Gray" />
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
